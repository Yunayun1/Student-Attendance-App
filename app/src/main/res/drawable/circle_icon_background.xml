<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="#40000000" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>
    <!-- Main Circle Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="2dp"
                android:color="#E0E0E0" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>
</layer-list>