<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentAttendanceManagementApp"
        tools:targetApi="31">

        <!-- Sign Up Activity -->
        <activity android:name=".SignUpActivity" android:exported="true" />

        <!-- Login Activity -->
        <activity android:name=".LoginActivity" android:exported="true" />

        <!-- Home Page Activity -->
        <activity android:name=".HomePage" android:exported="true" />

        <!-- Attendance Activity -->
        <activity android:name=".AttendanceActivity" android:exported="true" />

        <activity android:name=".ClassAttendanceActivity" android:exported="true" />

        <!-- Students Activity -->
        <activity android:name=".StudentsActivity" android:exported="true" />

        <!-- Join Class Activity -->
        <activity android:name=".JoinClassActivity" android:exported="true" />

        <!-- Profile Activity -->
        <activity android:name=".ProfileActivity" android:exported="true" />

        <activity android:name=".EditProfileActivity" android:exported="true"/>

        <activity
            android:name=".AddClassActivity" android:exported="true" android:theme="@style/PopupTheme" />

        <!-- Main Activity (Launcher Activity) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
